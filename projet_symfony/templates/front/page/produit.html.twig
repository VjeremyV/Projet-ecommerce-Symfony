{% extends "front/template_page.html.twig" %}
{% block titre %}{{categories.0.nom}}
{% endblock %}

{% block content %}
    <div class="container d-flex justify-content-center py-5">
        <div class="card bg-dark" style="border:none;transform: none">
            <div class="row g-0 align-items-center">
                <div class="col-md-4">
                    <img src="{{ dir ~ produits.0.image }}" class="img-fluid rounded-0" alt="{{ produits.0.description }}">
                </div>
                <div class="col-md-8">
                    <div class="card-body text-white">
                        <h5 class="card-title pb-3">{{produits.0.nom}}</h5>
                        <p class="card-text pb-2">{{produits.0.description}}</p>
                        <p class="card-text text-center fs-4"><strong class="text-bold f">{{ produits.0.prix }} €</strong></p>
                        <div class="d-flex justify-content-center">
                            <a href="#" class="btn btn-warning rounded-0">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class='d-flex flex-wrap justify-content-center align-items-center'>
        {% for produit in produits %}
            <a href="{{path('app_categories_produits',{idprod:produit.id})}}" style="text-decoration: none">
                <div  class='card m-3 bg-dark  ' style="width: 18rem; border:none; box-shadow: none;">
                    <img class='card-img-top ' style='border-radius: 0px;' src="{{ dir ~ produit.image }}" alt="{{ produit.description }}">
                    <div class='card-body d-flex flex-column align-items-center justify-content-center text-center'>
                        <span class='card-title text-white'>{{ produit.nom}}</span>
                        <span class='card-text text-white'>{{ produit.prix}}
						€ TTC</span>
                        <button class="border-orange w-75 h-75 bg-dark mt-3 ">
                            <a href="#" class='text-white text-decoration-none align-middle'>
                                <i class="fa-solid fa-plus"></i>
                            </a>
                        </button>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}